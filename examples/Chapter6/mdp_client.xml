<class name = "mdp_client" protocol = "MDPC01" numbering = "none">
    MDP/Client
    <message name = "request">
        Client request to broker
        <field name = "service" type = "string">Service name</field>
        <field name = "body" type = "opaque">Request body</field>
    </message>
    <message name = "reply">
        Response back to client
        <field name = "service" type = "string">Service name</field>
        <field name = "body" type = "opaque">Response body</field>
    </message>
</class>
